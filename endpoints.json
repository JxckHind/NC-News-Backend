{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "description": "Footie!",
          "slug": "football"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking",
          "created_at": 1527695953341,
          "votes": 0,
          "article_img_url": "https://images.pexels.com...",
          "comment_count": 12
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of a specific article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "topic": "cooking",
        "created_at": 1527695953341,
        "votes": 0,
        "article_img_url": "https://images.pexels.com...",
        "comment_count": 12
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for specific article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 12,
          "body": "Hello There",
          "votes": 100,
          "author": "icellusedkars",
          "article_id": 1,
          "created_at": 1583025180000
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds comment to database about specific article",
    "queries": [],
    "exampleRequest": {
      "username": "ScottChegg",
      "body": "Hello"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 120,
        "body": "Hello",
        "votes": 0,
        "author": "ScottChegg",
        "article_id": 3,
        "created_at": 1673024520000
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates number of votes on database for specific article",
    "queries": [],
    "exampleRequest": {
      "inc_votes": 10
    },
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "topic": "cooking",
        "created_at": 1527695953341,
        "votes": 10,
        "article_img_url": "https://images.pexels.com...",
        "comment_count": 12
      }
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "weegembump!",
          "name": "Jim",
          "avatar_url": "https://avatars2..."
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes specific comment from database",
    "queries": []
  }
}
